<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mitr_regular"
            android:text="Data Anak"
            android:textColor="#030112"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/nama_anak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama : Nama Anaknya"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#030112"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir : 31/03/2016"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#030112"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin : Perempuan"
            android:fontFamily="@font/mitr_regular"
            android:textColor="#030112"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A5A5A5"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:cardCornerRadius="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DF0000"
                android:padding="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_round_delete_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                tools:targetApi="lollipop" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/edit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:cardCornerRadius="14dp"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5A5ACA"
                android:padding="5dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_round_edit_24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                tools:targetApi="lollipop" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>