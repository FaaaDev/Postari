<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    app:behavior_hideable="true"
    app:layout_behavior="@string/view_pager_bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/slide_indicator" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="60dp">
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/mitr_regular"
                            android:text="Tambah Data Orang Tua"
                            android:textColor="#030112"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="60dp">
                            <EditText
                                android:id="@+id/no_hp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:fontFamily="@font/mitr_regular"
                                android:hint="088828xxxxxx"
                                android:inputType="textCapWords"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Nomor Hp"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <EditText
                                android:id="@+id/mom_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:fontFamily="@font/mitr_regular"
                                android:hint="Nama Ibu"
                                android:inputType="textCapWords"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Nama Ibu"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <EditText
                                android:id="@+id/dad_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:fontFamily="@font/mitr_regular"
                                android:hint="Nama Ayah"
                                android:inputType="textCapWords"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Nama Ayah"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <LinearLayout
                                android:id="@+id/pos_location"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minHeight="53dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/bg_spinner">
                                <Spinner
                                    android:id="@+id/spinner_loc"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Lokasi Posyandu"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <EditText
                                android:id="@+id/alamat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:fontFamily="@font/mitr_regular"
                                android:hint="Jl. Alamat"
                                android:inputType="textMultiLine"
                                android:textSize="16sp"
                                android:gravity="top" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Alamat"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:orientation="vertical"
                                android:paddingVertical="30dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp">
                                    <CheckBox
                                        android:id="@+id/cb1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:background="@drawable/radio_background"
                                        android:button="@android:color/transparent"
                                        android:fontFamily="@font/mitr_regular"
                                        android:padding="12dp"
                                        android:text="Pemeriksaan Ibu Hamil"
                                        android:gravity="center"
                                        android:textColor="@drawable/radio_text"
                                        android:textSize="14sp"/>
                                    <CheckBox
                                        android:id="@+id/cb2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/radio_background"
                                        android:button="@android:color/transparent"
                                        android:fontFamily="@font/mitr_regular"
                                        android:padding="12dp"
                                        android:text="Imunisasi"
                                        android:gravity="center"
                                        android:textColor="@drawable/radio_text"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <CheckBox
                                    android:id="@+id/cb3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:background="@drawable/radio_background"
                                    android:button="@android:color/transparent"
                                    android:fontFamily="@font/mitr_regular"
                                    android:padding="12dp"
                                    android:text="Penimbangan"
                                    android:gravity="center"
                                    android:textColor="@drawable/radio_text"
                                    android:textSize="14sp"/>

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Layanan"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/button_background"
                            android:text="Tambah Data"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/mitr_regular"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>