<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    app:behavior_hideable="true"
    app:layout_behavior="@string/view_pager_bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:background="@drawable/slide_indicator" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="60dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/mitr_regular"
                            android:text="Tambah Data Penimbangan"
                            android:textColor="#030112"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="60dp">

                            <EditText
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/layouting"
                                android:editable="false"
                                android:fontFamily="@font/mitr_regular"
                                android:hint="dd/MM/yyyy"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Tanggal"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/layouting"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/tall"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/mitr_regular"
                                    android:inputType="number"
                                    android:hint="00"
                                    android:textSize="16sp"
                                    android:background="#00000000"
                                    android:layout_weight="1"/>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#03A9F4"
                                    android:layout_marginHorizontal="15dp"/>
                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mitr_regular"
                                    android:text="Cm"
                                    android:textColor="#1b1b1b"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Tinggi Badan"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="24dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/layouting"
                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/weight"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/mitr_regular"
                                    android:inputType="numberDecimal"
                                    android:hint="0.0 (Gunakan titik sebagai koma)"
                                    android:textSize="16sp"
                                    android:background="#00000000"
                                    android:layout_weight="1"/>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#03A9F4"
                                    android:layout_marginHorizontal="15dp"/>
                                <TextView
                                    android:layout_width="50dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/mitr_regular"
                                    android:text="Kg"
                                    android:textColor="#1b1b1b"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:background="@drawable/background_label"
                                android:fontFamily="@font/mitr_regular"
                                android:text="Berat Badan"
                                android:textColor="#1b1b1b"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="30dp"
                            android:background="@drawable/button_background"
                            android:text="Tambah Data"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/mitr_regular"
                            android:textSize="18sp"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>